=form_for(@user) do |form|
  %p 
    First name: 
    =form.text_field :first_name, placeholder: "John"
  %p 
    Last name: 
    =form.text_field :last_name, placeholder: "Doe"
  %p 
    Email address 
    =form.text_field :email, placeholder: "John@example.com"
  %p 
    Password: 
    =form.password_field :password, placeholder: "Password"
  %p 
    Confirm Password: 
    =form.password_field :password_confirmation, placeholder: "Re-enter password"
  =form.submit "Save"
  