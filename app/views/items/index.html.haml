%h2 Your items

%span.new_link= link_to 'Add New Item', new_item_url

%div#new_form
  %h3 New Item
  = render 'form'

%span.form_box

%p
  =form_tag items_url, :method => :get do
    =text_field_tag :item, (params[:item])
    =submit_tag 'Search' 
    %span.cancel_link=link_to "Reset", items_url

= render 'items'

#pagination
  = paginate @items