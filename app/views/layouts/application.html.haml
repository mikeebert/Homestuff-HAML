!!! html
%html
  %head
    %titleHomestuffHAML
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = csrf_meta_tags

  %body
    #header
      .menubar
        - if !logged_in?
          %ul
            = form_tag(sessions_create_url) do
              %li 
                Email: 
                =text_field_tag :email, nil, placeholder: "user@example.com" 
              %li 
                Password: 
                =password_field_tag :password, nil, placeholder: "password" 
                =submit_tag "Sign In"
        -else
          %ul
            %li Welcome, #{current_user.first_name}
            %li= link_to "My Stuff", items_url
            %li= link_to "My Account", user_url(current_user)
            %li= link_to "Logout", delete_session_url, method: "delete"
      
      %h1 HomeStuff
      %em The best place on the web to keep your stuff
    
    
    - if flash[:notice].present?
      .notice
        #notice= notice
    
    = yield
