!!! html
%html
  %head
    %titleHomestuffHAML
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = csrf_meta_tags

  %body
    #header
      .menubar
        - if !logged_in?
          = form_tag(sessions_create_url) do
            Email: 
            =text_field_tag :email, nil, placeholder: "user@example.com" 
            Password: 
            =password_field_tag :password, nil, placeholder: "password" 
            =submit_tag "Sign In"
        -else
          Welcome, #{current_user.first_name}
          = link_to "My Stuff", user_url(current_user) 
          = link_to "My Account", user_url(current_user)
          = link_to "Logout", delete_session_url, method: "delete"
      
      %h1 HomeStuff
      %em The best place on the web to keep your stuff
    
    
    - if flash[:notice].present?
      .notice
        #notice= notice
    
    = yield
